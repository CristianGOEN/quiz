{% extends 'base.html.twig' %}

{% block title %}List all quizzes{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-6 offset-3">
            <div class="row">
                <h1>All quizzes available</h1>
            </div>
            <div class="row g-3">
                {% for quiz in quizzes %}
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <h3 class="card-title">{{ quiz.title }}</h3>
                                <a href="{{ url('quiz_web_get_show',{'id': quiz.id}) }}" class="btn btn-primary">Start</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}